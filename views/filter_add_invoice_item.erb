<!-- HERE IS HOW TO CATCH POST/GET PARAMETERS -->
<%
iid = params[:iid]
add_item_number = params[:add_item_number]
invoice = BlackStack::Invoice.where(:id=>iid).first
if invoice.allowedToAddRemoveItems?
	begin
		invoice.add_item(add_item_number)
	rescue => e
		redirect_adapted_to_nginx getDivisionURL + "/settings/invoice?iid=#{iid}&errdesc=#{CGI.escape(e.to_s)}"
	end
	redirect_adapted_to_nginx getDivisionURL + "/settings/invoice?iid=#{iid}"
else
	redirect_adapted_to_nginx getDivisionURL + "/settings/invoice?iid=#{iid}&errdesc=#{CGI.escape("Can't add or remove items from this invoice")}"
end
%>
